<!-- Thêm thư viện -->
<!-- Kết thúc-->
@{
    ViewBag.Title = "Đề tài";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section footer
{
    <script src="~/Assets/scripts/DropDown.js"></script>
    <script src="~/Assets/scripts/TopicControl.js"></script>
    
}

<!-- MAIN -->
<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">

            <!-- OVERVIEW -->
            <div class="panel panel-headline row">
                <div class="panel-heading col-md-3">
                    <h4>ĐỀ TÀI THỰC TẬP</h4>
                </div>
                <div class="col-md-9" style="margin-top: 10px">
                    <div class="input-group" style="max-width: 255px;float: right;" id="adv-search">
                        <input type="text" class="form-control" placeholder="Search ..." id="myInput" onkeyup="Search()" />
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-primary" onclick="Search()">
                                <span class="fa fa-search"
                                      aria-hidden="true"></span>
                            </button>

                        </div>
                    </div>
                </div>
            </div>
            <!-- END OVERVIEW -->
            <!-- RECENT PURCHASES -->
            <div class="panel panel-headline">
                <div class="panel-heading">
                </div>
                <div class="panel-body">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#tab1">Đề tài</a></li>
                        <li><a data-toggle="tab" href="#tab2">Đề tài bộ môn</a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="tab1" class="tab-pane fade in active">
                            <div class="row">
                                <div class="col-sm-4">
                                    <label style="float: left;margin: 5px 0px ">Học kỳ </label>
                                    <div class="ddlHocKy HocKy col-sm-8" style="padding-left:20px">

                                    </div>

                                </div>
                                <div class="col-sm-4" style="padding-left:20px">
                                    <label style="float: left;margin: 5px 0px ">Thực tập </label>
                                    <div class="ddlLoaiTT LoaiTT col-sm-9" style="padding-left:20px">
                                    </div>

                                </div>


                                <div class="col-sm-4" style="padding: 0px;">
                                    <button onclick="clearTextBox()" data-toggle="modal"
                                            data-target="#themdetai" style="float: right;border-radius: 2%;" class="btn btn-outline-info btn-primary">
                                        <i class="fa fa-plus"></i> Thêm mới
                                    </button>
                                </div>
                            </div>
                            <table id="myTable" class="mytable table table-bordered" cellspacing="0" cellpadding="5" id=""
                                   style="border-collapse:collapse;margin:10px 0px 10px 0px">
                                <thead>
                                    <tr>
                                        <th class="center-header" scope="col">STT</th>
                                        <th class="center-header" scope="col" style="width:35%;">Tên đề tài</th>
                                        <th class="center-header" scope="col" style="width:30%;">Mô tả</th>
                                        <th class="center-header" scope="col" style="width:15%;">Lĩnh vực</th>
                                        <th class="center-header" scope="col">Trạng thái</th>
                                        <th class="center-header" scope="col">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody class="tbody"></tbody>
                            </table>
                            <div class="row">

                                <div class="col-sm-5">
                                    <p style="float: left;margin-top: 5px">Hiển thị </p>
                                    <div style="float: left;margin: 0px 5px;" class="form-group">
                                        <select name="state" id="maxRows" class="form-control" style="width:80px;">
                                            <option value="10" selected>10</option>
                                            <option value="20">20</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>

                                    </div>
                                    <p style="float: left;margin-top: 5px">trên 1 trang </p>
                                </div>
                                <div class="pagination-container col-sm-7">
                                    <nav style="float:right;">
                                        <ul class="pagination"></ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                        <div id="tab2" class="tab-pane fade">
                            <div class="row">
                                <div class="col-sm-4">
                                    <label style="float: left;margin: 5px 0px ">Học kỳ </label>
                                    <div class="ddlHocKy1 HocKy1 col-sm-8" style="padding-left:20px">

                                    </div>

                                </div>
                                <div class="col-sm-4" style="padding-left:20px">
                                    <label style="float: left;margin: 5px 0px ">Thực tập </label>
                                    <div class="ddlLoaiTT1 LoaiTT1 col-sm-9" style="padding-left:20px">
                                    </div>

                                </div>



                            </div>
                            <table id="myTable1" class="mytable table table-bordered" cellspacing="0" cellpadding="5" id=""
                                   style="border-collapse:collapse;margin:10px 0px 10px 0px">
                                <thead>
                                    <tr>
                                        <th class="center-header" scope="col" style="width:5%;">STT</th>
                                        <th class="center-header" scope="col" style="width:35%;">Tên đề tài</th>
                                        <th class="center-header" scope="col" style="width:30%;">Mô tả</th>
                                        <th class="center-header" scope="col" style="width:15%;">Lĩnh vực</th>
                                        <th class="center-header" scope="col" style="width:15%;">Giảng viên</th>
                                    </tr>
                                </thead>
                                <tbody class="tbody1"></tbody>
                            </table>
                            <div class="row">

                                <div class="col-sm-5">
                                    <p style="float: left;margin-top: 5px">Hiển thị </p>
                                    <div style="float: left;margin: 0px 5px;" class="form-group">
                                        <select name="state" id="maxRows1" class="form-control" style="width:80px;">
                                            <option value="10" selected>10</option>
                                            <option value="20">20</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>

                                    </div>
                                    <p style="float: left;margin-top: 5px">trên 1 trang </p>
                                </div>
                                <div class="pagination-container col-sm-7">
                                    <nav style="float:right;">
                                        <ul class="pagination pagination1"></ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- END RECENT PURCHASES -->

            </div>
        </div>
        <!-- END MAIN CONTENT -->
    </div>
</div>
<!-- Modal sua detai -->
<div class="modal fade" id="suadetai" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">CHỈNH SỬA ĐỀ TÀI</h4>
            </div>
            <form style="width:75%;margin:auto">
                <div class="modal-body">
                    <!-- edit form column -->
                    <input type="hidden" id="ID" />
                    <div class="form-group row">
                        <label class="col-sm-3 control-label">Kỳ học</label>
                        <div class="col-sm-5">
                            <div class="ddlHocKy SuaHocKy"></div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 control-label">Thực tập</label>
                        <div class="col-sm-5">
                            <div class="ddlLoaiTT SuaLoaiTT"></div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 control-label">Lĩnh vực</label>
                        <div class="col-sm-5">
                            <div class="ddlLinhvuc SuaLinhvuc"></div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 control-label">Tên đề tài</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="SuaTenDeTai" />
                            <p id="SuaerrorTenDT" class="text-danger"></p>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 control-label">Mô tả</label>
                        <div class="col-sm-9">
                            <textarea id="SuaMoTa" class="form-control" rows="10"></textarea>

                            <p id="SuaerrorMoTa" class="text-danger"></p>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 control-label">Trạng thái</label>
                        <div class="col-sm-3">
                            <input type="checkbox" id="SuaTrangThai" class="kichhoat col-sm-3" />
                            <p id="suatrangthai" class="col-sm-9">Chưa kích hoạt</p>

                        </div>
                    </div>

                </div>
            </form>
            <div class="modal-footer">
                <button onclick="Update()" type="submit" class="btn btn-primary btn-success"> <i class="fa fa-save"></i> Sửa</button>
                <button type="button" class="btn btn-default btn-danger" data-dismiss="modal"><i class="fa fa-close"></i> Đóng</button>
            </div>

        </div>

    </div>
</div>
<!-- /Modal sua detai -->
<!-- Modal them detai -->
<div class="modal fade" id="themdetai" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">THÊM MỚI ĐỀ TÀI</h4>
            </div>
            <form style="width:75%;margin:auto">
                <div class="modal-body">
                    <!-- edit form column -->

                    <div class="form-group row">
                        <label class="col-sm-3 control-label">Kỳ học</label>
                        <div class="col-sm-5">
                            <div class="ddlHocKy drpHocKy"></div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label">Thực tập</label>
                        <div class="col-sm-5">
                            <div class="ddlLoaiTT drpLoaiTT"></div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 control-label">Lĩnh vực</label>
                        <div class="col-sm-5">
                            <div class="ddlLinhvuc drpLinhvuc"></div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 control-label">Tên đề tài</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="TenDeTai" />
                            <p id="errorTenDT" class="text-danger"></p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label">Mô tả</label>
                        <div class="col-sm-9">
                            <textarea id="MoTa" class="form-control" rows="10"></textarea>

                            <p id="errorMoTa" class="text-danger"></p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label">Trạng thái</label>
                        <div class="col-sm-3">
                            <input type="checkbox" id="TrangThai" class="kichhoat col-sm-3" />
                            <p id="trangthai" class="col-sm-9">Chưa kích hoạt</p>

                        </div>
                    </div>

                </div>
            </form>
            <div class="modal-footer">
                <button onclick="Add()" type="submit" class="btn btn-primary btn-primary"> <i class="fa fa-save"></i> Thêm mới</button>
                <button type="button" class="btn btn-default btn-danger" data-dismiss="modal"><i class="fa fa-close"></i> Đóng</button>
            </div>

        </div>
    </div>
</div>
<!-- /Modal them detai -->
<div id="snackbar">
    <div id="notification" class="alert" style="padding: 10px 15px 10px 15px"></div>
</div>


<!-- Modal HTML -->
<div id="thongbao" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box">
                    <i class="material-icons"><i class=" fa fa-close mb-2"></i></i>
                </div>
                <h4 class="modal-title">Error</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <p>Đề tài đã được chọn. Bạn không thể xóa !</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal delete -->
<div id="modal_delete" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box">
                    <i class="material-icons"><i class=" fa fa-close mb-2"></i></i>
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <p>Bạn có thật sự muốn xóa đề tài này? Các thông tin của đề tài sẽ mất.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger btn_delete" onclick="DeleleResult(this.id)">Delete</button>
            </div>
        </div>
    </div>
</div>


