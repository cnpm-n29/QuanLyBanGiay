
@{
    ViewBag.Title = "ChonDeTai";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

@section footer
{
    <script src="~/Assets/scripts/DropDown.js"></script>
    <script src="~/Assets/scripts/ChooseTopicControl.js"></script>
}
<!-- LEFT SIDEBAR -->
<div id="sidebar-nav" class="sidebar">
    <div class="sidebar-scroll">
        <nav>
            <ul class="nav">
                <li><a href="~/StudentTeacher/InstructorInfo" class=""><i class="fa fa-address-card"></i> <span>Thông tin chi tiết</span></a></li>
                <li><a href="~/StudentField/ChooseField" class=""><i class="fa fa-list-alt"></i> <span>Chọn lĩnh vực</span></a></li>
                <li><a href="~/TopicStudent/ChooseTopic" class="active"><i class="fa fa-book"></i> <span>Đề tài thực tập</span></a></li>
                <li><a href="~/Score/StudentScore" class=""><i class="fa fa-list-alt"></i> <span>Kết quả thực tập</span></a></li>


            </ul>
        </nav>
    </div>
</div>
<!-- END LEFT SIDEBAR -->
<!-- MAIN -->
<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">

            <!-- OVERVIEW -->
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h4>ĐỀ TÀI THỰC TẬP</h4>
                </div>

            </div>
            <!-- END OVERVIEW -->
            <!-- RECENT PURCHASES -->
            <div class="panel panel-headline">
                <div class="panel-heading">
                </div>
                <div class="panel-body">
                    <div>
                        <label style="float: left;margin: 5px 10px 25px 0px ">Thực tập </label>
                        <div class="ddlLoaiTT col-sm-3" style="padding-left:20px">
                        </div>
                        <table id="myTable" class="mytable table table-bordered" cellspacing="0" cellpadding="5">
                            <tr>
                                <th class="center-header" scope="col">STT</th>
                                <th class="center-header" scope="col" style="width:40%;">Tên đề tài</th>
                                <th class="center-header" scope="col" style="width:40%;">Mô tả</th>
                                <th class="center-header" scope="col" style="width:40%;">Lĩnh vực</th>
                                <th class="center-header" scope="col">Chọn</th>
                                <th class="center-header" scope="col">Chi tiết</th>
                            </tr>
                            <tbody class="tbody"></tbody>
                        </table>
                        <table class="tableTopic table table-bordered" cellspacing="0" cellpadding="5"></table>



                        <div class="row editsave"></div>
                    </div>
                </div>

            </div>
            <!-- END RECENT PURCHASES -->

        </div>
    </div>
    <!-- END MAIN CONTENT -->
</div>

<!-- Modal chi tiết đề tài-->
<div style="width: 70%;margin: auto;margin-top: 10%;" class="modal fade" id="chitietdt" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">NHỮNG NGƯỜI ĐÃ CHỌN</h4>
            </div>
            <div class="modal-body">
                <table class="table table-bordered table-hover"
                       style="max-width: 70%;margin: auto;margin-top: 3%;margin-bottom: 3%;">
                    <thead>
                        <tr class="bg-primary">
                            <th style="width: 50%;text-align: center">MSV</th>
                            <th style="text-align: center">Họ tên</th>
                        </tr>
                    </thead>
                    <tbody class="tablecheck">
                        

                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- /Modal chi tiết -->
