@model QuanLyDeTai.Models.LoginModel
@{
    ViewBag.Title = "Login";

}

<!doctype html>
<html lang="en">
<head>
    <title>Hệ thống đăng nhập</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->
    <link rel="stylesheet" href="~/Assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/vendor/font-awesome/css/font-awesome.min.css">
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/Assets/css/main.css">
    <!-- FOR DEMO PURPOSES ONLY. You should remove this in your project -->
    <link rel="stylesheet" href="~/Assets/css/demo.css">

    <link rel="stylesheet" href="~/Assets/vendor/linearicons/style.css">
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    <!-- ICONS -->
    <link rel="vinh-uni" sizes="76x76" href="~/Assets/img/logo.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Assets/img/logo.png">
</head>

<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <!-- NAVBAR -->
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="brand" style="width: 20%;">
                <a href="index.html">
                    <img src="~/Assets/img/logo.png" alt="DHV Logo">
                    <h4 style="width: 80%;float: right;font-size: 15px;"> QUẢN LÝ ĐỀ TÀI THỰC TẬP </h4>
                </a>

            </div>
            
        </nav>
        <!-- END NAVBAR -->
        <!-- Javascript -->


        <div class="container">
            <div class="col-lg-4 col-md-3 col-sm-2"></div>
            <div class="col-lg-4 col-md-6 col-sm-8">
                <div class="logo">
                    <img src="~/Assets/img/login.png" alt="Logo">
                </div>
                @using (Html.BeginForm("LoginByCredential", "Login", FormMethod.Post, new { @class = "user" }))
                {
                   
                <div class="row loginbox">
                    <div class="col-lg-12" style="text-align: center">
                        <span class="singtext"> Đăng nhập </span>
                    </div>
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <i>@Html.TextBoxFor(model => model.Username, new { @class = "form-control form-login", @placeholder = "Tên đăng nhập" })</i>
                    </div>
                    <div class="col-lg-12  col-md-12 col-sm-12">
                        <i>@Html.PasswordFor(model => model.Password, new { @class = "form-control form-login", @placeholder = "Mật khẩu" })</i>
                    </div>
                    <div class="col-lg-12  col-md-12 col-sm-12">
                        <input type="submit" class="btn submitButton" value="Đăng nhập" />
                    </div>
                    <div class=" col-lg-12  col-md-12 col-sm-12 custom-control custom-checkbox">
                        @Html.CheckBoxFor(model => model.RememberMe, new { @class = "custom-control-input", @id = "defaultChecked2", @checked = "checked" })
                        <label class="custom-control-label" for="defaultChecked2"> Ghi nhớ mật khẩu</label>
                        <a href="#"><u style="float: right;"><i>  Quên mật khẩu </i></u> </a>
                    </div>


                </div>
                }
            </div>
            <div class="col-lg-4 col-md-3 col-sm-2"></div>
        </div>

    </div>
    <div class=" footer">
        <div class="container-fluid">
            <p class="copyright" style=" text-align: center; padding-top: 10px">Copyright&copy; 2019 by Vinh University.</p>
        </div>
    </div>


    <script src="~/Assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/scripts/common.js"></script>

</body>

</html>

