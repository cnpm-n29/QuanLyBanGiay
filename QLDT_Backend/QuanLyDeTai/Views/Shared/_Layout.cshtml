<!doctype html>
<html lang="en">
<head>
    <title>Chốt đề tài | Quản lý đề tài thực tập</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->
    <link rel="stylesheet" href="~/Assets/vendor/select2-4.0.11/dist/css/select2.css">
    <link rel="stylesheet" href="~/Assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/vendor/font-awesome/css/font-awesome.min.css">
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/Assets/css/main.css">
    <!-- FOR DEMO PURPOSES ONLY. You should remove this in your project -->
    <link rel="stylesheet" href="~/Assets/css/demo.css">

    <link rel="stylesheet" href="~/Assets/vendor/linearicons/style.css">
    <link rel="stylesheet" href="~/Assets/vendor/DataTables/datatables.min.css">

    <!-- GOOGLE FONTS -->
    <link rel="stylesheet" href="~/Assets/vendor/allert.css">
    <link rel="stylesheet" href="~/Assets/vendor/toastr/toastr-master/build/toastr.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    <!-- ICONS -->
    <link rel="vinh-uni" sizes="76x76" href="~/Assets/img/logo.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Assets/img/logo.png">
</head>
<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <!-- NAVBAR -->
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="brand" style="width: 20%;">
                <a href="~/Home/">
                    <img src="~/Assets/img/logo.png" alt="DHV Logo">
                    <h4 style="width: 80%;float: right;font-size: 15px;">QUẢN LÝ ĐỀ TÀI THỰC TẬP</h4>
                </a>

            </div>
            <div class="container-fluid">
                <div class="navbar-btn">
                    <button type="button" class="btn-toggle-fullwidth"><i class="lnr lnr-arrow-left-circle"></i></button>
                </div>


                <div id="navbar-menu">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle icon-menu" data-toggle="dropdown">
                                <i class="fa fa-bell"></i>
                                <span class="bg badge bg-danger">0</span>
                            </a>
                            <ul class=" nt dropdown-menu notifications rad-dropmenu-item"></ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle icon-menu" data-toggle="dropdown">
                                <i class="fa fa-envelope"></i>
                                <span class="badge bg-danger">0</span>
                            </a>
                            <ul class="dropdown-menu notifications rad-dropmenu-item">
                                <li><a href="#" class="notification-item"><span class="dot bg-warning"></span>System space is almost full</a></li>
                                <li><a href="#" class="notification-item"><span class="dot bg-danger"></span>You have 9 unfinished tasks</a></li>
                                <li><a href="#" class="notification-item"><span class="dot bg-success"></span>Monthly report is available</a></li>
                                <li><a href="#" class="notification-item"><span class="dot bg-warning"></span>Weekly meeting in 1 hour</a></li>
                                <li><a href="#" class="notification-item"><span class="dot bg-success"></span>Your request has been approved</a></li>
                                <li><a href="#" class="more">Đọc tất cả</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="~/Assets/img/user.png" class="img-circle" alt="Avatar"> <span>@Session["Fullname"]</span> <i class="icon-submenu lnr lnr-chevron-down"></i></a>
                            <ul class="dropdown-menu rad-dropmenu-item">
                                <li><a href="#"><i class="lnr lnr-user"></i> <span>My Profile</span></a></li>
                                <li><a onclick="GetAllNotification()"><i class="lnr lnr-envelope"></i> <span>Notification</span></a></li>
                                <li><a href="#"><i class="lnr lnr-cog"></i> <span>Change Password</span></a></li>
                                <li><a href="~/Login/Logout"><i class="lnr lnr-exit"></i> <span>Logout</span></a></li>
                            </ul>
                        </li>
                        <!-- <li>
                            <a class="update-pro" href="https://www.themeineed.com/downloads/klorofil-pro-bootstrap-admin-dashboard-template/?utm_source=klorofil&utm_medium=template&utm_campaign=KlorofilPro" title="Upgrade to Pro" target="_blank"><i class="fa fa-rocket"></i> <span>UPGRADE TO PRO</span></a>
                        </li> -->
                    </ul>
                </div>
            </div>
        </nav>
        <!-- END NAVBAR -->
        <!-- LEFT SIDEBAR -->
        <div id="sidebar-nav" class="sidebar">
            <div class="sidebar-scroll">
                <nav>
                    <ul class="nav">
                        @if (Session["Quyen"].ToString().Contains("Thêm, Sửa,Xóa đề tài"))
                        {
                            <li>
                                <a id="menu" href="#subPages" class="collapsed"><i class="fa fa-book"></i><span> Thực tập </span> <i class="icon-submenu lnr lnr-chevron-left" style="float:right;font-size:15px"></i></a>
                                <div id="subPages" class="collapse ">
                                    <ul class="nav">
                                        @if (Session["Quyen"].ToString().Contains("Thêm, Sửa,Xóa đề tài"))
                                        {
                                            <li><a id="TopicIndex" href="~/Topic/Index"><span>Đề tài thực tập</span></a></li>
                                        }
                                        @if (Session["Quyen"].ToString().Contains("Xem danh sách hướng dẫn"))
                                        {
                                            <li><a id="ListStudentTeacher" href="~/Student/ListStudentTeacher"><span>Danh sách hướng dẫn</span></a></li>
                                        }
                                        @if (Session["Quyen"].ToString().Contains("Chốt đề tài"))
                                        {
                                            <li><a id="SaveTopic" href="~/TopicStudent/SaveTopic"><span>Chốt đề tài</span></a></li>
                                        }
                                        <li><a id="MonitorProgress" href="~/TopicStudent/MonitorProgress"><span>Giám sát tiến độ</span></a></li>
                                    </ul>
                                </div>
                            </li>

                            <li>
                                <a id="menu2" href="#subPages2" class="collapsed"><i class="fa fa-address-card"></i> <span> Danh sách </span> <i class="icon-submenu lnr lnr-chevron-left" style="float:right;font-size:15px"></i></a>
                                <div id="subPages2" class="collapse ">
                                    <ul class="nav">
                                        @if (Session["Quyen"].ToString().Contains("Thêm, Sửa , Xóa Danh sách sinh viên"))
                                        {
                                            <li><a id="ListStudent" href="~/Student/ListStudent"><span>Danh sách sinh viên</span></a></li>
                                        }
                                        @if (Session["Quyen"].ToString().Contains("Thêm, Sửa , Xóa Danh sách Giảng viên"))
                                        {
                                            <li><a id="ListTeacherSubject" href="~/Teacher/ListTeacherSubject"><span>Danh sách giảng viên</span></a></li>
                                        }
                                        @if (Session["Quyen"].ToString().Contains("Thêm, Sửa , Xóa Danh sách thực tập"))
                                        {
                                            <li><a id="StudentPracticeIndex" href="~/StudentPractice/Index"><span>Danh sách thực tập</span></a></li>
                                        }
                                        @if (Session["Quyen"].ToString().Contains("Thêm, Sửa, Xóa thông báo"))
                                        {
                                            <li><a id="NotificationIndex" href="~/Notification/Index"><span>Danh sách thông báo</span></a></li>
                                        }
                                        @if (Session["Quyen"].ToString().Contains("Xem danh sách sinh viên bộ môn"))
                                        {
                                            <li><a id="ListStudentSubject" href="~/Student/ListStudentSubject"><span>Danh sách sinh viên</span></a></li>
                                        }
                                        @if (Session["Quyen"].ToString().Contains("Xem danh sách giảng viên bộ môn"))
                                        {
                                            <li><a id="ListTeacherSubject" href="~/Teacher/ListTeacherSubject"><span>Danh sách giảng viên</span></a></li>
                                        }
                                    </ul>
                                </div>
                            </li>


                            if (Session["Quyen"].ToString().Contains("Phân Bộ Môn"))
                            {
                                <li><a id="StudentSubjectIndex" href="~/StudentSubject/Index" class=""><i class="fa fa-server"></i> <span>Phân bộ môn</span></a></li>
                            }


                            if (Session["Quyen"].ToString().Contains("Phân giáo viên hướng dẫn "))
                            {
                                <li><a id="AssignedTeacher" href="~/StudentTeacher/AssignedTeacher" class=""><i class="fa fa-server"></i> <span>Phân GVHD</span></a></li>
                            }
                            if (Session["Quyen"].ToString().Contains("Phân hội đồng chấm thi"))
                            {
                                <li><a id="ReportIndex" href="~/Report/" class=""><i class="fa fa-server"></i> <span>Phân HD chấm thi</span></a></li>
                            }
                            if (Session["Quyen"].ToString().Contains("Thêm, Sửa, Xóa điểm"))
                            {
                                <li><a id="ListScore" href="~/Score/ListScore" class=""><i class="fa fa-pencil-square-o"></i> <span>Điểm</span></a></li>
                            }
                        }
                        @if (Session["Quyen"].ToString().Contains("Xem list đề tài"))
                        {
                            <li><a id="ListTopic" href="~/Additional/ListTopic" class=""><i class="fa fa-book"></i> <span>Đề tài</span></a></li>
                        }
                        @if (Session["Quyen"].ToString().Contains("Xem list thực tập"))
                        {
                            <li><a id="ListPractice" href="~/Additional/ListPractice" class=""><i class="fa fa-server"></i> <span>Danh sách thực tập</span></a></li>
                        }
                        @if (Session["Quyen"].ToString().Contains("Xem list điểm"))
                        {
                            <li><a id="ListScoreNoEdit" href="~/Additional/ListScore" class=""><i class="fa fa-pencil-square-o"></i> <span>Điểm</span></a></li>
                        }


                    </ul>
                </nav>
            </div>
        </div>
        <!-- END LEFT SIDEBAR -->

        @RenderBody()

        <!-- END MAIN -->
        <div class="clearfix"></div>
        <footer>
            <div class="container-fluid">
                <p class="copyright">Copyright&copy; 2019 by Vinh University.</p>
            </div>
        </footer>
    </div>
    <!-- END WRAPPER -->
    <!--Loading-->
    <img id="loading" class="loading display" src="~/Assets/img/loading.gif" alt="loading">
    <!-- Javascript -->
    <script src="~/Assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/vendor/DataTables/datatables.min.js"></script>
    <script src="~/Assets/scripts/NotificationCommon.js"></script>
    @RenderSection("footer", required: false)
    <script src="~/Assets/scripts/common.js"></script>
    <script src="~/Assets/vendor/allert.js"></script>
    <script src="~/Assets/vendor/toastr/toastr-master/build/toastr.min.js"></script>
    <script src="~/Assets/vendor/select2-4.0.11/dist/js/select2.js"></script>
    <div class="modal fade" id="xemtatcathongbao" role="dialog">
        <div class="modal-dialog ">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">THÔNG BÁO</h4>
                </div>
                <form style="width:75%;height:50%;margin:auto">
                    <div class="modal-body">
                        <!-- edit form column -->

                        <div class="list-group" id="allnotification" style="overflow: auto;">

                        </div>


                    </div>
                </form>
                <div class="modal-footer">

                    <button type="button" onclick="GetNotification()" class="btn btn-default btn-danger" data-dismiss="modal"><i class="fa fa-close"></i> Đóng</button>
                </div>

            </div>

        </div>
    </div>
    <div style="width:20%" id="duynhat"></div>

    @if (@ViewBag.id != null)
    {
        <script>
                $("#@ViewBag.id").addClass("menu");
                $("#@ViewBag.id").css("background-color","#337ab7");
        </script>
    }
    @if (@ViewBag.id2 != null)
    {
        <script>
                $("#@ViewBag.id2").addClass("menu2");
                $("#@ViewBag.id2").css("background-color","#337ab7");
        </script>
    }
    @if (@ViewBag.active != null)
    {
        <script>
                $("#@ViewBag.active").addClass("active");
        </script>
    }
</body>

</html>
